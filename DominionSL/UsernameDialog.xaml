<sdk:ChildWindow x:Class="DominionSL.UsernameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
				 Title="Choose Username"
	xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    Height="200" Width="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<TextBlock Margin="0,6,0,0" VerticalAlignment="Top" Grid.Column="0">Username:</TextBlock>
		<TextBox VerticalAlignment="Top" Grid.Column="1" x:Name="Username" ></TextBox>
		<Button Grid.Row="1" Grid.ColumnSpan="2" Click="Button_Click">OK</Button>
	</Grid>
</sdk:ChildWindow>
